<h3>Results</h3>

<% if offers.empty? %>
  <div class="alert alert-info" role="alert">
    <strong>Oh Snap!</strong>
    You don't have offers available at the moment.
  </div>
<% else %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Payout</th>
    </tr>
  </thead>
  <tbody>
    <% offers.each do |offer| %>
    <tr>
      <td class="text-center"><img src="<%= offer.thumbnail %>" alt="<%= offer.title %>" /></td>
      <td><%= offer.title %></td>
      <td><%= offer.payout %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
